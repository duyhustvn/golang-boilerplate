services:
  grafana:
    image: {{ grafana_image }}
    restart: always
    ports:
      - "3000:3000"
    environment:
      - GF_SECURITY_ADMIN_USER={{ grafana_admin_user }}
      - GF_SECURITY_ADMIN_PASSWORD={{ grafana_admin_pass }}
    volumes:
      - grafana_data:/var/lib/grafana

volumes:
  grafana_data:
    driver: local
