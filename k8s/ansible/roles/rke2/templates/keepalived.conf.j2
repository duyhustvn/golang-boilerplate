vrrp_instance VI_1 {
    state MASTER
    interface {{ vip_interface }}
    virtual_router_id 51
    priority {% if inventory_hostname == groups['rke2-master'][0] %}100{% else %}90{% endif %}
    advert_int 1
    authentication {
        auth_type PASS
        auth_pass {{ vip_password | default('securepass') }}
    }
    virtual_ipaddress {
        {{ vip }}/24
    }
}
